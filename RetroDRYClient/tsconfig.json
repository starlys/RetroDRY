{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "DOM", "ES2015", "ES2017"],
        "module": "commonjs",
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "downlevelIteration": true
    },
    "include": ["src", "unittest"],
    "exclude": ["node_modules"]
}