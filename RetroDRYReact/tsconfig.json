{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "DOM", "ES2015", "ES2017"],
        "module": "ESNext",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "types": []
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}